<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookTrack | Data Peminjaman</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

<%- include('partials/navbar') %>

<div class="container mx-auto px-4 py-8 flex-grow">
  <div class="max-w-7xl mx-auto">

    <!-- Header Section -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
        üìã Data Peminjaman Buku
      </h1>
      <p class="text-gray-600 mt-2">Kelola dan pantau riwayat peminjaman buku</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <% 
        const totalPeminjaman = peminjaman.length;
        const sedangDipinjam = peminjaman.filter(p => !p.tanggal_kembali).length;
        const sudahDikembalikan = peminjaman.filter(p => p.tanggal_kembali).length;
      %>
      
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-blue-100 text-sm font-medium">Total Peminjaman</p>
            <p class="text-3xl font-bold mt-1"><%= totalPeminjaman %></p>
          </div>
          <div class="bg-white bg-opacity-30 rounded-full p-3">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-yellow-100 text-sm font-medium">Sedang Dipinjam</p>
            <p class="text-3xl font-bold mt-1"><%= sedangDipinjam %></p>
          </div>
          <div class="bg-white bg-opacity-30 rounded-full p-3">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-green-100 text-sm font-medium">Sudah Dikembalikan</p>
            <p class="text-3xl font-bold mt-1"><%= sudahDikembalikan %></p>
          </div>
          <div class="bg-white bg-opacity-30 rounded-full p-3">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- TABEL DATA PEMINJAMAN -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h5 class="text-xl font-semibold flex items-center gap-2">
          üìö Riwayat Peminjaman
        </h5>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-800">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Judul Buku</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Penulis</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Nama Peminjam</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Tanggal Pinjam</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Tanggal Kembali</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-center text-xs font-semibold text-white uppercase tracking-wider">Aksi</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (peminjaman.length === 0) { %>
            <tr>
              <td colspan="7" class="px-6 py-12 text-center">
                <div class="flex flex-col items-center justify-center text-gray-400">
                  <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                  </svg>
                  <p class="text-lg font-medium">Belum ada data peminjaman</p>
                  <p class="text-sm mt-1">Riwayat peminjaman akan muncul di sini</p>
                </div>
              </td>
            </tr>
            <% } else { %>
              <% peminjaman.forEach(p => { %>
              <tr class="hover:bg-gray-50 transition duration-150">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= p.judul %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-600"><%= p.penulis %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                      <span class="text-blue-600 font-semibold text-xs"><%= p.nama_peminjam.charAt(0).toUpperCase() %></span>
                    </div>
                    <div class="text-sm font-medium text-gray-900"><%= p.nama_peminjam %></div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-600">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <%= new Date(p.tanggal_pinjam).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <% if (p.tanggal_kembali) { %>
                    <div class="text-sm text-gray-600">
                      <div class="flex items-center gap-1">
                        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= new Date(p.tanggal_kembali).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                      </div>
                    </div>
                  <% } else { %>
                    <span class="text-gray-400 text-sm flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                      </svg>
                      Belum dikembalikan
                    </span>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <% if (p.tanggal_kembali) { %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      ‚úÖ Dikembalikan
                    </span>
                  <% } else { %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                      ‚è≥ Dipinjam
                    </span>
                  <% } %>
                </td>
                <td class="px-6 py-4 text-center">
                  <% if (!p.tanggal_kembali) { %>
                    <form action="/kembalikan/<%= p.id %>" method="POST" style="display:inline;">
                      <button 
                        type="submit" 
                        class="inline-flex items-center px-4 py-2 bg-green-500 text-white text-xs font-medium rounded-md hover:bg-green-600 transition duration-200 shadow-sm hover:shadow"
                        onclick="return confirm('‚úÖ Konfirmasi pengembalian buku?\n\nJudul: <%= p.judul %>\nPeminjam: <%= p.nama_peminjam %>')">
                        ‚úÖ Kembalikan
                      </button>
                    </form>
                  <% } else { %>
                    <form action="/peminjaman/delete/<%= p.id %>" method="POST" style="display:inline;">
                      <button 
                        type="submit" 
                        class="inline-flex items-center px-4 py-2 bg-red-500 text-white text-xs font-medium rounded-md hover:bg-red-600 transition duration-200 shadow-sm hover:shadow"
                        onclick="return confirm('‚ö†Ô∏è Yakin ingin menghapus riwayat ini?\n\nJudul: <%= p.judul %>\nPeminjam: <%= p.nama_peminjam %>')">
                        üóëÔ∏è Hapus
                      </button>
                    </form>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

    </div>

  </div>
</div>

<%- include('partials/footer') %>

</body>
</html>